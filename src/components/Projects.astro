---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

// Obtener todos los proyectos publicados
const allProjects = await getCollection('projects', ({ data }: CollectionEntry<'projects'>) => {
  return data.published !== false;
});

// Ordenar por fecha descendente
const projects = allProjects.sort((a: CollectionEntry<'projects'>, b: CollectionEntry<'projects'>) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);
---

<section class="projects section" id="proyectos">
	<div class="container">
		<h2>Proyectos que demuestran mi experiencia</h2>

		<div class="projects-grid">
			{projects.map((project: CollectionEntry<'projects'>) => (
				<article class="project-card">
					<div class="project-image">
						<img src={project.data.image} alt={project.data.title} />
					</div>
					<div class="project-content">
						<h3>{project.data.title}</h3>
						<p class="project-description">
							{project.data.description}
						</p>
						{project.data.tags && (
							<div class="project-tags">
								{project.data.tags.map((tag: string) => (
									<span class="tag">{tag}</span>
								))}
							</div>
						)}
						<div class="project-links">
							<a href={`/proyectos/${project.slug}`} class="btn btn-primary">
								Ver detalles →
							</a>
						</div>
					</div>
				</article>
			))}
		</div>

		<div class="projects-cta">
			<p>¿Quieres ver más detalles de mis proyectos?</p>
			<a href="#contacto" class="btn btn-secondary">Contáctame para una demostración</a>
		</div>
	</div>
</section>

<style>
	.projects {
		background: linear-gradient(180deg, var(--color-bg-alt) 0%, white 100%);
	}

	.projects h2 {
		text-align: center;
		margin-bottom: 4rem;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.project-card {
		background: white;
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
		border: 1px solid var(--color-border);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		display: flex;
		flex-direction: column;
	}

	.project-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
	}

	.project-image {
		position: relative;
		width: 100%;
		aspect-ratio: 16/10;
		overflow: hidden;
		background: var(--color-bg-alt);
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.project-content {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		flex-grow: 1;
	}

	.project-content h3 {
		color: var(--color-text);
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}

	.project-description {
		font-size: 1rem;
		line-height: 1.7;
		color: var(--color-text-light);
		margin-bottom: 1.5rem;
		flex-grow: 1;
	}

	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.tag {
		display: inline-block;
		padding: 0.25rem 0.75rem;
		background: var(--color-bg-alt);
		color: var(--color-primary);
		border-radius: 20px;
		font-size: 0.85rem;
		font-weight: 500;
	}

	.project-links {
		margin-top: auto;
	}

	.projects-cta {
		text-align: center;
		margin-top: 4rem;
		padding: 3rem;
		background: var(--color-bg-alt);
		border-radius: 12px;
	}

	.projects-cta p {
		font-size: 1.25rem;
		color: var(--color-text);
		margin-bottom: 1.5rem;
	}

	@media (max-width: 768px) {
		.projects-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.project-content {
			padding: 1.5rem;
		}

		.project-content h3 {
			font-size: 1.25rem;
		}

		.projects-cta {
			padding: 2rem 1rem;
		}

		.projects-cta p {
			font-size: 1.1rem;
		}
	}
</style>
